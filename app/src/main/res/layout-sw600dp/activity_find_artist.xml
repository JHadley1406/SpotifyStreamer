<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.hhi.training.spotifystreamer.FindArtistActivity">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_find_artist"
        android:name="com.hhi.training.spotifystreamer.FindArtistFragment"
        tools:layout="@layout/fragment_find_artist"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <FrameLayout
        android:id="@+id/top_track_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>




</LinearLayout>